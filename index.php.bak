require_once 'connection.php';

$races = [];

if (isset($conn) && !$conn->connect_error) { $sql = "SELECT round, name,
    location, flag, date, time, status FROM races ORDER BY round ASC"; $result =
    $conn->query($sql); if ($result && $result->num_rows > 0) { while ($row =
    $result->fetch_assoc()) { $races[] = $row; } } $conn->close(); } ?>

    <script>
      const races = <?php echo json_encode($races, JSON_UNESCAPED_UNICODE); ?>;

      function renderRaces() {
          const raceGrid = document.getElementById('raceGrid');

          if (!Array.isArray(races) || races.length === 0) {
              raceGrid.innerHTML = `
                  <div class="empty-state">
                      <div class="empty-state-content">
                          <div class="empty-state-icon">üèÅ</div>
                          <h3>No Races Available</h3>
                          <p>The racing calendar is currently empty. Please check back later.</p>
                      </div>
                  </div>
              `;
              return;
          }

          raceGrid.innerHTML = races.map(race => {
              const status = (race.status || "").toLowerCase();
              const statusClass = status === 'completed' ? 'status-completed' : 'status-upcoming';
              const statusText = status === 'completed' ? 'Completed' : 'Upcoming';

              return `
                  <div class="race-card">
                      <div class="race-header">
                          <div class="race-round">${race.round}</div>
                          <div class="race-status ${statusClass}">${statusText}</div>
                      </div>
                      <div class="race-name">${race.name}</div>
                      <div class="race-location">
                          <span class="flag-emoji">${race.flag}</span>
                          ${race.location}
                      </div>
                      <div class="race-details">
                          <div class="detail-item">
                              <div class="detail-label">Race Date</div>
                              <div class="detail-value">${race.date}</div>
                          </div>
                          <div class="detail-item">
                              <div class="detail-label">Start Time</div>
                              <div class="detail-value">${race.time}</div>
                          </div>
                      </div>
                  </div>
              `;
          }).join('');
      }

      document.addEventListener('DOMContentLoaded', renderRaces);
    </script>
